{
  "name": "@btc-vision/bip32",
  "version": "7.1.2",
  "type": "module",
  "description": "A BIP32 compatible library",
  "keywords": [
    "bip32",
    "bitcoinjs",
    "bitcoin",
    "secp256k1"
  ],
  "main": "./src/cjs/index.cjs",
  "module": "./src/esm/index.js",
  "types": "./src/cjs/index.d.ts",
  "exports": {
    ".": {
      "require": "./src/cjs/index.cjs",
      "import": "./src/esm/index.js",
      "types": "./src/cjs/index.d.ts"
    }
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json",
    "checkHybrid": "chmod +x test.cjs && node test.cjs",
    "coverage-report": "npm run build && npm run nobuild:coverage-report",
    "coverage": "npm run build && npm run nobuild:coverage",
    "test:watch": "vitest",
    "format": "npm run prettier -- --write",
    "format:ci": "npm run prettier -- --check",
    "gitdiff:ci": "npm run build && git diff --exit-code",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "nobuild:coverage-report": "vitest run --coverage",
    "nobuild:coverage": "vitest run --coverage",
    "nobuild:unit": "vitest run",
    "postbuild": "find src/cjs -type f -name \"*.js\" -exec bash -c 'mv \"$0\" \"${0%.js}.cjs\"' {} \\; && chmod +x fixup.cjs && node fixup.cjs",
    "prettier": "prettier 'ts-src/**/*.ts' --ignore-path ./.prettierignore",
    "test": "npm run build && npm run lint && npm run nobuild:coverage",
    "unit": "npm run build && npm run nobuild:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btc-vision/bip32.git"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "@btc-vision/bs58check": "^5.0.1",
    "@btc-vision/ecpair": "^4.0.5",
    "@btc-vision/post-quantum": "^0.5.3",
    "@btc-vision/wif": "^6.0.1",
    "@noble/hashes": "^2.0.1",
    "uint8array-tools": "^0.0.9"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "tiny-secp256k1": "^2.2.4",
    "tslint": "^6.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "author": "Daniel Cousens",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bitcoinjs/bip32/issues"
  }
}
