{
    "name": "@btc-vision/bs58check",
    "type": "module",
    "version": "5.0.1",
    "description": "A straightforward implementation of base58-check encoding",
    "engines": {
        "node": ">=24.0.0"
    },
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "import": "./build/index.js",
            "default": "./build/index.js"
        },
        "./base": {
            "types": "./build/base.d.ts",
            "import": "./build/base.js",
            "default": "./build/base.js"
        }
    },
    "keywords": [
        "base",
        "base58",
        "base58check",
        "bitcoin",
        "bs58",
        "check",
        "checksum",
        "decode",
        "decoding",
        "encode",
        "encoding",
        "litecoin"
    ],
    "homepage": "https://github.com/btc-vision/bs58check",
    "bugs": {
        "url": "https://github.com/btc-vision/bs58check/issues"
    },
    "license": "MIT",
    "author": "Daniel Cousens",
    "files": [
        "build"
    ],
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "module": "build/index.js",
    "repository": {
        "type": "git",
        "url": "git://github.com/btc-vision/bs58check.git"
    },
    "scripts": {
        "build": "eslint src && tsc",
        "clean": "rimraf build",
        "test": "npm run build && vitest run",
        "test:watch": "vitest",
        "test:coverage": "npm run build && vitest run --coverage",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint src",
        "typecheck": "tsc --noEmit",
        "prebuild": "npm run clean"
    },
    "dependencies": {
        "@noble/hashes": "^2.0.1",
        "bs58": "^6.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^25.2.3",
        "eslint": "^10.0.0",
        "prettier": "^3.8.1",
        "rimraf": "^6.1.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0",
        "vitest": "^4.0.18"
    }
}
